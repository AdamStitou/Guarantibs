@{
    ViewData["Title"] = "Menu";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Menu</title>

    <!-- Ajouter le lien vers Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">

    <style>
        body {
            font-family: Arial, sans-serif;
            color: #100E1C;
        }

        h1 {
            text-align: center;
            margin-top: 20px; /* Ajout de marges pour l'espace en haut */
        }

        ul {
            list-style-type: none;
            padding: 0;
            display: flex;
            justify-content: center;
        }

        li {
            margin: 10px;
        }

        .lien {
            text-decoration: none;
            color: #9AAACC;
            padding: 10px 20px;
            border-radius: 15px;
            background-color: #FCD127;
            transition: background-color 0.3s;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Menu</h1>
        <ul class="nav justify-content-center">
            <li class="nav-item">
                <a asp-controller="Access" class="lien nav-link" asp-action="Index">voir les profils</a>
            </li>
            <li class="nav-item">
                <a asp-controller="Access" class="lien nav-link" asp-action="Register">Créer un compte</a>
            </li>
            <li class="nav-item">
                <a asp-controller="Access" class="lien nav-link" asp-action="Login">Se connecter</a>
            </li>
        </ul>
    </div>

    
</body>
</html>
