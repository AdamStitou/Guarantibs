@model Guarantib.Models.Suivis

@{
    ViewData["Title"] = "Create";
}
<style>
    
    .centered-form {
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .centered-form .col-md-4 {
        max-width: 400px; 
    }

    .form-group.submit-button input {
        width: auto; 
        
    }

    .btn-primary {
        background-color: #FFBB3E;
        color: #fff;
        padding: 10px 20px;
        border: none;
        cursor: pointer;
        border-radius: 5px;

    }

    .btn-primary:hover {
        background-color: #FFA500;
    }

</style>
<h1>Create</h1>

<h4>Suivis</h4>
<hr />
<p>ID du produit : @Model.SelectedProduitId</p>
<hr />
<div class="centered-form">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                
                <input asp-for="Etape" class="form-control" placeholder="Etape" />
                <span asp-validation-for="Etape" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                
                <input asp-for="dialogue" class="form-control" placeholder="commentaire"/>
                <span asp-validation-for="dialogue" class="text-danger"></span>
            </div>
            <br />
            <input type="hidden" asp-for="SelectedProduitId" name="SelectedProduitId" />

            <div class="form-group submit-button">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voir tous les commentaires</a>
</div>

