@model IEnumerable<Guarantib.Models.Marque>

@{
    ViewData["Title"] = "Index";
}
<style>
    .table {
        width: 100%;
        border-collapse: collapse;
        padding-bottom: 20%;
    }

        .table th, .table td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: center;
        }

        .table th {
            background-color: #f2f2f2;
        }

        .table tbody tr:hover {
            background-color: #f5f5f5;
        }

        .table a {
            opacity: 1;
        }

    .lien {
        text-decoration: none;
        text-decoration-style: solid;
        color: #000000;
        border-radius: 20%;
        background-color: #FCD127;
        padding: 1%;
    }

    .table a:hover {
        text-decoration: none;
        color: #007bff;
    }

    
    }

</style>
<h1>Les marques</h1>

<p>
    <a asp-action="Create">Ajoutez une marque </a>
</p>
<div class="table-responsive">
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Lien)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
    @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Lien)
                </td>
                <td>
                        <a asp-action="Edit" class="lien" asp-route-id="@item.Id">Modifier</a> |
                        <a asp-action="Delete" class="lien" asp-route-id="@item.Id">Supprimer</a>|
                        <a asp-controller="Produits" class="lien" asp-action="GetProduitsByMarque" asp-route-id="@item.Id">Ses produits</a>
                </td>
            </tr>
    }
        </tbody>
    </table>
</div>

